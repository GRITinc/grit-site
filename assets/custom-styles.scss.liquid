.slideshow__subheading.animated-carousel {
  	color: $red;
  	font-size: 220%;
  	white-space:pre;
	&::before {
      color: $gold;
      content: $first-line;
      display: block;
      font-size: calc(2rem + 6 * ((100vw - 320px) / 480));
      //animation: benefits-carousel 30s linear infinite 5s;
    }
  	&::after {
      color: $white;
      content: 'Made in Oakland, Ca';
      display: block;
      font-family: 'Acier BAT';
      font-size: 70%;
      margin-top: -8rem;
    }
}
.slideshow__text-container {
  background: -moz-linear-gradient(0deg, rgba(0,0,0,.3) 60%, transparent 100%);/* FF3.6+ */
  background: -webkit-gradient(linear, 0deg, color-stop(60%, rgba(0,0,0,.3)), color-stop(100%, transparent));/* Chrome,Safari4+ */
  background: -webkit-linear-gradient(0deg, rgba(0,0,0,.3) 60%, transparent 100%);/* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(0deg, rgba(0,0,0,.3) 60%, transparent 100%);/* Opera 11.10+ */
  background: -ms-linear-gradient(0deg, rgba(0,0,0,.3) 60%, transparent 100%);/* IE10+ */
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='rgba(0,0,0,.3)', endColorstr='transparent', GradientType='1'); /* for IE */
  background: linear-gradient(0deg, rgba(0,0,0,.3) 60%, transparent 100%);/* W3C */
  padding: 2rem;
  top: calc(100% - (23.5rem/2));
}
$border-color: #000;
$rotating-border-color: red;
@keyframes rotating-border {
  0% { border-bottom-color: $rotating-border-color;}
  25% { border-left-color: $rotating-border-color;}
  50% { border-top-color: $rotating-border-color;}
  100% { border-right-color: $rotating-border-color;}
}
@keyframes nudge {
  0% {visibility: hidden; right: 5rem;}
  49% {visibility: hidden; right: 5rem;}
  50% {visibility: visible; right: 5rem;}
  55% {visibility: visible; right: 3rem;}
  100% {visibility: visible; right: 3rem;}
}
