/*==================================================================*/

.graph-container {
  overflow: hidden;
  background: #000;
}

.graph {
  background-color: #000;
  font: normal 100%/150% arial,helvetica,sans-serif;
  caption {
    font: bold 150%/120% arial,helvetica,sans-serif;
    padding-bottom:0.33em;
  }
  tbody th {
    text-align:right;
    font-size: 1.1em;
    font-weight: 500;
    color: #fff;
    line-height: 1.4;
    text-transform: uppercase;
  }
}

@supports (display:grid) {


    .graph {
      display:block;
      padding-right: 4%;
      height:40rem;
      background: #000;
        caption {
          display:block;
        }
        tbody {
          position:relative;
          display:grid;
          grid-template-columns:repeat(auto-fit, minmax(2em, 1fr));
          column-gap:3%;
          align-items:end;
          height:70%;
          margin:20% 0 1em 2.5em;
          padding:0 1em;
          border-bottom:2px solid rgba(0,0,0,0.5);
          background:repeating-linear-gradient(
            180deg,
            rgba(170,170,170,0.4) 0,
            rgba(170,170,170,0.4) 1px,
            transparent 1px,
            transparent 20%
          );
          @media only screen and (max-width: $mobile-width) {
            margin-top: 30%;
          }
          &:before,
          &:after {
              position:absolute;
              left:-3.2em;
              width:2.8em;
              text-align:right;
              font:bold 80%/120% arial,helvetica,sans-serif;
          }
          &::before {
			content:"50%";
			top:-0.6em;
		  }
          &::after {
			content:"0%";
			bottom:-0.6em;
		  }
          tr {
            position:relative;
            display:block;
            &::after {
              color: #fff;
              content: attr(data-content);
              white-space: pre-wrap;
              font-size: 0.9em;
              visibility: hidden;
            }
            &:hover {
              z-index:999;
              td span {
                width:4em;
                margin-left:-2em; /* 1/2 the declared width */
                opacity:1;
              }
              th {
                transition: transform 0.5s;
                @media only screen and (max-width: $mobile-width) {
              		transform: rotate(-90deg);
                }
              }
              &::after {
                visibility: visible;
              }
            }
          }
          th,
          td {
            display:block;
            text-align:center;
          }
          th {
            position:absolute;
            top:-5em;
            left:0;
            width:100%;
            text-align:center;
            white-space:nowrap;
            text-indent:0;
            transform:rotate(-45deg);
            &:after {
              content:"";
            }
            @media only screen and (max-width: $mobile-width) {
              top: -3.5em;
            }
          }
          td {
            width:90%;
            height:100%;
            background: #000;
            border: solid .1em #fff;
            border-radius:0.5em 0.5em 0 0;
            transition:background 0.25s;
          }
          tr:first-of-type td {
            background: #dc9e23;
            background: linear-gradient(-68deg, #000, #dc9e23);
            border-color: #000;
          }
          tr:first-of-type:hover td {
            background: #dc9e23;
            opacity: 1;
          }
          tr:hover td {
            background: #7918f2;
            background: -webkit-linear-gradient(-68deg, #000, #ac32e4 );
            background: -o-linear-gradient(-68deg, #000, #ac32e4 );
            background: -moz-linear-gradient(-68deg, #000, #ac32e4 );
            background: linear-gradient(-68deg, #000, #ac32e4 );
            border-color: #000;
            opacity:0.7;
          }
          td span {
            overflow:hidden;
            position:absolute;
            left:50%;
            top:50%;
            width:0;
            padding:0.5em 0;
            margin:-1em 0 0;
            font:normal 120% arial,helvetica,sans-serif;
            @media only screen and (max-width: $mobile-width) {
              font-size: 100%;
            }
            font-weight:bold;
            opacity:0;
            transition:opacity 0.5s;
            color:white;
          }
        }
      } /* end graph */
} /* grid only */