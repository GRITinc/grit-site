}
@keyframes landing-intro {
  0% {bottom: 0vh;}
  20% {opacity: 1; display: block;}
  100% {bottom: 101vh; opacity: 0; visibility: hidden; display: none;}
}

@keyframes intro-bounce {
  0% { opacity: 0;}
  20% {  opacity: 1; margin-top: -4rem;}
  100% { margin-top: 0;}
}

@keyframes landing-delay {
  0% {opacity: 0; display: none;}
  100% {opacity: 1; display: block;}
}
.letter {
  display: inline-block;
  margin-left: -0.2em;
  transition-property: display;
  transition-duration: 1s;
  transition-timing-function: linear;
}

#grit-superfoods.template-index {
  #intro-black {
    animation: landing-intro 2s linear 6.5s 1 normal forwards;
    display: block;
    position: fixed;
    top: 0;
    bottom: 0vh;
    left: 0;
    right: 0;
    background: #000;
    z-index: 10;
    .slideshow__text-container.page-width {
      transform: none;
      top: 50%;
      .slideshow__heading.h1 {
        animation: intro-bounce 2s ease-out 0s 1 normal forwards;
        color: $gold;
        font-size: 8rem;
        .delayed {
          animation: landing-delay 1s linear 2.5s 1 normal forwards;
          font-weight: 900;
          opacity: 0;
        }
        @media only screen and (max-width: 749px) {
          font-size: 6rem;         
        }
      }
    }
  }
  @media only screen and (max-width: 749px) {
    .slideshow__heading.h1 {
      font-family: 'Acier BAT';
      font-size: 10rem;
      font-weight: 300;
      height: 10rem;
    }
    .slideshow__subheading.animated-carousel {
      font-size: 120%;
      margin-left: -.5rem;
      &::before {
      	font-size: 6vw;
      }
      &:after {
        margin-top: -1rem;
      }
    }
  }
}
#intro-black .slideshow__heading.h1 {
